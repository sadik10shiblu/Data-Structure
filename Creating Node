#include<bits/stdc++.h>
using namespace std;


    class Node
    {
    public:
        int val;
        Node* next;                                          int → stores an integer value

                                                             int* → stores an address of an integer

                                                             Node → stores your val and next members

                                                             Node* → stores an address of a Node
    };
    int main()
    {
        Node a,b,c;
        a.val=10;
        b.val=20;
        c.val=30;

        a.next=&b;
        b.next=&c;
        c.next=NULL;

        cout<<a.val<<endl;
        cout<<a.next->val<<endl;
        cout<<a.next->next->val<<endl;
        return 0;
}
***********Creating Node with a constructore***************
#include<bits/stdc++.h>
using namespace std;


    class Node
    {
    public:
        int val;
        Node* next;
        Node(int val)//it's a constructor and the name should be same as class
        {            //(int val) thats mean it will take only int value
            this->val=val;//using this-> cause the name of class int and constructor int same"value"
            this->next=NULL;//putting NULL on every next cause when putting we can choose the address
        }
    };
    int main()
    {
        Node a(10),b(20),c(30);


        a.next=&b;
        b.next=&c;//after that in c.next not putting NULL cause it's by default has been put through constructor


        cout<<a.val<<endl;
        cout<<a.next->val<<endl;
        cout<<a.next->next->val<<endl;
        return 0;
    }


