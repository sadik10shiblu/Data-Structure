#include<bits/stdc++.h>
using namespace std;
class Node
{
    public:
    int val;
    Node* next;

    Node(int val)
    {
        this->val=val;;
        this->next=NULL;
    }
};
int main()
{



    Node* head=new Node(10);
    Node* a=new Node(20);
    Node* b=new Node(30);
    head->next=a;
    a->next=b;


Node* tmp=head;  //Doing this cause dont't want to lose head itself while looping(going through the whole loop), you lose the original address stored in head — at the end, head will be NULL.
After that, you won’t have a way to go back to the start of the list.
while(tmp!=NULL)
{
    cout<<tmp->val<<endl;
    tmp=tmp->next;
}
return 0;
}
